
#include <bits/stdc++.h>
using namespace std;  
int main()             //MAIN FUNCTION
{  
  int n, i, m=0, flag=0;  
  //Enter to check prime no
  cout << "Enter the Number to check Prime: ";  
  cin >> n;  
  m=n/2;  
  for(i = 2; i <= m; i++)    //FOR STATEMENT 
  {  
      if(n % i == 0)         //IF STATEMENT
      {  
          cout<<"Number is not Prime."<<endl;  
          flag=1;  
          break;  
      }  
  }  
  if (flag==0)               //IF STATEMENT
      cout << "Number is Prime."<<endl;  
  return 0;  
}
